{
  "manifest_version": 3,
  "name": "Cobalt Downloader",
  "version": "1.0",
  "description": "Copies the active tab's URL and pastes it into a new tab of https://cobalt.tools",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://cobalt.tools/*"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Send URL to Cobalt"
  },
  "background": {
    "service_worker": "background.js"
  }
}